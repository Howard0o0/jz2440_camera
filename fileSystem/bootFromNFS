#NFS启动


set bootargs  root=/dev/nfs nfsroot=172.16.157.17:/home/howard/work/jz2440/nfs/fs_mini_mdev_new ip=172.16.157.97:172.16.157.17:172.16.157.254:255.255.255.0::eth0:off  console=ttySAC0,115200

set bootargs  root=/dev/nfs nfsroot=172.16.157.17:/home/howard/work/jz2440/myproject/camera/fileSystem/fs_mini_mdev_new ip=172.16.157.97:172.16.157.17:172.16.157.254:255.255.255.0::eth0:off  console=ttySAC0,115200

nfsroot=[<server-ip>:]<root-dir>[,<nfs-options>]
ip=<client-ip>:<server-ip>:<gw-ip>:<netmask>:<hostname>:<device>:<autoconf>


